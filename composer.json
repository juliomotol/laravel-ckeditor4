{
    "name": "juliomotol/laravel-ckeditor4",
    "description": "CKEditor4 Publisher for Laravel >= 5.5",
    "keywords": [
        "juliomotol",
        "laravel-ckeditor4"
    ],
    "homepage": "https://github.com/juliomotol/laravel-ckeditor4",
    "license": "MIT",
    "authors": [
        {
            "name": "Julio Motol",
            "email": "julio.motol89@gmail.com",
            "homepage": "https://juliomotol.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0",
        "ckeditor/ckeditor": "^4.15",
        "illuminate/console": ">=5.5|^6.0|^7.0|^8.0",
        "illuminate/support": ">=5.5|^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": ">=3.5|^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "JulioMotol\\CKEditor4\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JulioMotol\\CKEditor4\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "JulioMotol\\CKEditor4\\CKEditor4ServiceProvider"
            ]
        }
    }
}
